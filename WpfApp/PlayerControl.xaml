<UserControl x:Class="WpfApp.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400"
             Background="Transparent" MouseLeftButtonDown="UserControl_MouseLeftButtonDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height=" 2*"/>
        </Grid.RowDefinitions>
        <Ellipse>
            <Ellipse.Fill>
                <ImageBrush x:Name="playerimg" ImageSource="./Images/DefaultPlayerPic.jpg" Stretch="Fill"/>
            </Ellipse.Fill>
        </Ellipse>

        <Viewbox Grid.Row="1">
            <TextBlock  x:Name="playerNameAndNumber" Background="White" Foreground="Black"></TextBlock>
        </Viewbox>

    </Grid>
</UserControl>
